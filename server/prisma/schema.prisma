// prisma/schema.prisma
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Task {
    id        Int     @id @default(autoincrement()) @map("_id")
    title     String
    completed Boolean
}

model User {
    id        Int      @id @default(autoincrement()) @map("_id")
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    username     String  @unique
    email        String  @unique
    hash         String
    refreshToken String?
}
